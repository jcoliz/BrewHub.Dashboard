{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Startup": "Debug"
    },
    "Console": {
      "FormatterName": "systemd",
      "FormatterOptions": {
        "IncludeScopes": false,
        "UseUtcTimestamp": false,
        "TimestampFormat": " [ dd/MM/yyyy HH:mm:ss ] "
      }
    }
  },
  "MQTT": {
    "Server" : "localhost",
    "ClientId" : "dashboard",
    "Topic": "brewhub;1"
  },
  "AllowedHosts": "*"
}
